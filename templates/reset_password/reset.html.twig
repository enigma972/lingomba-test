{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/reset_password_reset.css') }}" rel="stylesheet" type="text/css" />
    <style>
        #msg {
            visibility: hidden;
            min-width: 450px;
            background-color: yellow;
            color: #000;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            right: 30%;
            top: 30px;
            font-size: 17px;
            margin-right: 30px;
        }
    
        #msg.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }
    
        @-webkit-keyframes fadein {
            from {
                top: 0;
                opacity: 0;
            }
    
            to {
                top: 30;
                opacity: 1;
            }
        }
    
        @keyframes fadein {
            from {
                top: 0;
                opacity: 0;
            }
    
            to {
                top: 30;
                opacity: 1;
            }
        }
    
        @-webkit-keyframes fadeout {
            from {
                top: 30;
                opacity: 1;
            }
    
            to {
                top: 0;
                opacity: 0;
            }
        }
    
        @keyframes fadeout {
            from {
                top: 30;
                opacity: 1;
            }
    
            to {
                top: 0;
                opacity: 0;
            }
        }
    </style>

{% endblock %}

{% block body %}
    <div class="reset">
        <h2 align="center" style="color:#fff;">Rest password</h2>

    {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Reset password</button>
    {{ form_end(resetForm) }}

    </div>
    
{% endblock %}