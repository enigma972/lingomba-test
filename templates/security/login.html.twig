{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/signin.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="signin">
        <form method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <h2 style="color: white">log in</h2>
            <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
            <button type="submit">Log in</button>
            <br>
            <div id="container">
                <a href="re.html" style="margin-right: 0px; font-size: 15px;
                font-family: Tahoma, Geneva, sans-serI">Reset password</a>
                <a href="{{ path('app_forgot_password_request') }}" style="margin-right: 0px; font-size:px;
                font-family: Tahoma, Geneva, sans-serI">Forgot password</a>
            </div><br><br><br><br><br>
            Don't have account?<a href="{{ path('app_register') }}" style="font-family:'Play', sans-serif;">&nbsp;Sign Up</a>
        </form>
    </div>
{% endblock %}
